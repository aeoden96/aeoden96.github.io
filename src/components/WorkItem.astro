---
export interface Props {
  title: string;
  timeframe: string;
  company?: string;
  description?: string;
  technologies?: string[];
}

const {
  title,
  timeframe,
  company,
  description,
  technologies = [],
} = Astro.props;
---

<div class="work-item-component flex flex-col gap-2">
  <div class="flex justify-between items-center">
    <div class="flex items-center gap-2">
      <span class="font-semibold">{title}</span>
      {
        company && (
          <span class="inline-flex items-center bg-blue-100 dark:bg-blue-900 text-xs px-2 py-1 rounded">
            <span class="mr-1">ğŸ¢</span> {company}
          </span>
        )
      }
    </div>
    <span class="text-gray-600 text-xs">ğŸ“… {timeframe}</span>
  </div>
  {
    description && (
      <p class="text-gray-600 text-sm mt-1 max-w-2xl">{description}</p>
    )
  }

  {
    technologies.length > 0 && (
      <div class="tech-tags mt-2">
        {technologies.map((tech) => (
          <span class="inline-block bg-gray-100 text-gray-800 text-xs px-2 py-1 rounded mr-1 mb-1">
            {tech}
          </span>
        ))}
      </div>
    )
  }

  <div class="key-projects">
    <slot name="key-projects" />
  </div>
</div>
