---
export interface Props {
  originalUrl: string;
  originalTitle?: string;
  originalAuthor?: string;
  originalAuthorUrl?: string;
}

const { originalUrl, originalTitle = "the original blog", originalAuthor, originalAuthorUrl } = Astro.props;
---

<div
  class="my-6 p-4 border-l-4 border-blue-500 bg-blue-50 dark:bg-blue-950 dark:border-blue-600 rounded-r-lg shadow-sm"
>
  <div class="flex items-start">
    <div class="flex-shrink-0 mt-0.5">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5 text-blue-600 dark:text-blue-400"
        viewBox="0 0 20 20"
        fill="currentColor"
      >
        <path
          fill-rule="evenodd"
          d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2h-1V9z"
          clip-rule="evenodd"></path>
      </svg>
    </div>
    <div class="ml-3">
      <h3 class="text-sm font-medium !mt-0 text-blue-800 dark:text-blue-300">
        Based on a tutorial
      </h3>
      <div class="mt-2 text-sm text-blue-700 dark:text-blue-200">
        <span>
          For the original video or blog post, please visit:
          <a
            href={originalUrl}
            class="font-medium underline text-blue-800 hover:text-blue-900 dark:text-blue-300 dark:hover:text-blue-200 transition-colors"
            target="_blank"
            rel="noopener noreferrer"
          >{originalTitle}</a>.
        </span>  
        {originalAuthor && (
          <span>
            You can also find more cool stuff on the author's blog:
            <a href={originalAuthorUrl} class="underline">
              {originalAuthor}
            </a>
          </span>
        )}
      </div>
    </div>
  </div>
</div>

