---
export interface Props {
  companyName: string;
  title: string;
  startDate: string;
  endDate: string;
  workList?: string[];
}

const { companyName, title, startDate, endDate, workList } = Astro.props;
---

<section class="work-item flex-row flex w-full">
  <div class="w-full flex justify-start items-start flex-col py-10">
    <div class="sticky px-6 top-20 text-left flex flex-col gap-4  ">
      <h2 class=" text-6xl uppercase font-bold text-white">{title}
     </h2>

     <span class="text-gray-400 text-sm uppercase">//  {startDate} - {endDate}</span>
 
     
     <ul class="text-gray-300 text-md list-disc pl-5 space-y-1">
       {workList?.map((item) => <li>{item}</li>)}
     </ul>
    </div>    

      <!-- Projects List -->
      <div class="w-full flex flex-col gap-60 bg-black pt-20 z-10">
        <slot />
      </div>
  </div>
  <div
    class="flex flex-col  w-[80px]  justify-between relative gap-4"
  >
    <span class="text-white text-sm font-bold uppercase">{endDate}</span>
    <span class="text-white text-sm font-bold uppercase">{startDate}</span>
  </div>
  <div class="tape-measure w-[20px] relative flex gap-4"></div>
  <div class="relative side-bar flex gap-4">
    <div
      class="bg-[#26262683] sticky top-20 flex text-white [writing-mode:vertical-lr] h-fit p-4 font-semibold text-4xl"
    >
      {companyName.toUpperCase()}
    </div>
  </div>
</section>

<style>
  .tape-measure {
    background-color: #000;
    opacity: 0.8;
    background-image: linear-gradient(#262626 2px, transparent 2px),
      linear-gradient(90deg, #262626 2px, transparent 2px),
      linear-gradient(#262626 1px, transparent 1px),
      linear-gradient(90deg, #262626 1px, #000 1px);
    background-size:
      30px 60px,
      30px 60px,
      10px 20px,
      0px 20px;
    background-position:
      -2px -2px,
      -2px -2px,
      -1px -1px,
      -1px -1px;
  }
</style>
