---
export interface Props {
  originalUrl: string;
  originalTitle?: string;
}

const { originalUrl, originalTitle = "the original blog" } = Astro.props;
---

<div
  class="my-6 p-4 border-l-4 border-amber-500 bg-amber-50 dark:bg-amber-950 dark:border-amber-600 rounded-r-lg shadow-sm"
>
  <div class="flex items-start">
    <div class="flex-shrink-0 mt-0.5">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5 text-amber-600 dark:text-amber-400"
        viewBox="0 0 20 20"
        fill="currentColor"
      >
        <path
          fill-rule="evenodd"
          d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2h-1V9z"
          clip-rule="evenodd"></path>
      </svg>
    </div>
    <div class="ml-3">
      <h3 class="text-sm !mt-0.5 font-medium text-amber-800 dark:text-amber-300">
        Archived Content
      </h3>
      <div class="mt-2 text-sm text-amber-700 dark:text-amber-200">
        <p>
          This is an archived version of the original post. For the most
          up-to-date content, please visit
          <a
            href={originalUrl}
            class="font-medium underline text-amber-800 hover:text-amber-900 dark:text-amber-300 dark:hover:text-amber-200 transition-colors"
            target="_blank"
            rel="noopener noreferrer"
          >
            {originalTitle}
          </a>.
        </p>
      </div>
    </div>
  </div>
</div>

